ZMK_COMBO_MIRRORED(copy,     &kp LC(C),             LB3 LB2,         RB3 RB2,           T_FAST, I_FAST)
ZMK_COMBO_MIRRORED(paste,    &kp LC(V),             LB2 LB1,         RB2 RB1,           T_FAST, I_FAST)
ZMK_COMBO_MIRRORED(p,        &kp P,                 LB1 LB0,         RB1 RB0,           T_FAST, I_FAST)
ZMK_COMBO_MIRRORED(undo,     &kp LC(Z),             LB4 LB3,         RB4 RB3,           T_FAST, I_FAST)
