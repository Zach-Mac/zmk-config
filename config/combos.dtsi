ZMK_COMBO_MIRRORED(grave,    &kp GRAVE,             LM3 LB3,         RM3 RB3,           T_SLOW, I_SLOW)
ZMK_COMBO_MIRRORED(bslh,     &kp BSLH,              LM2 LB2,         RM2 RB2,           T_SLOW, I_SLOW)
