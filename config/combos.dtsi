#include "mouse.dtsi"

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30
#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

#define T_FAST COMBO_TERM_FAST
#define T_SLOW COMBO_TERM_SLOW
#define I_FAST COMBO_IDLE_FAST
#define I_SLOW COMBO_IDLE_SLOW

#define ZMK_COMBO_MIRRORED(NAME, BEHAVIOR, POS_A, POS_B, TERM, IDLE) \
    ZMK_COMBO(NAME,     BEHAVIOR, POS_A, NOT_MIRROR, TERM, IDLE) \
    ZMK_COMBO(NAME##_m, BEHAVIOR, POS_B, MIRROR,        TERM, IDLE)

/* Horizontal combos - left hand */
ZMK_COMBO_MIRRORED(ldel,     &kp DEL,               LT4 LT3,         RT4 RT3,           T_FAST, I_FAST)
ZMK_COMBO_MIRRORED(esc,      &kp ESC,               LT3 LT2,         RT3 RT2,           T_FAST, I_FAST)
ZMK_COMBO_MIRRORED(mouse,    &smart_mouse,          LT2 LT1,         RT2 RT1,           T_FAST, I_FAST)
ZMK_COMBO_MIRRORED(redo,     &kp LC(Y),             LT1 LT0,         RT1 RT0,           T_FAST, I_FAST)
ZMK_COMBO_MIRRORED(lwcsa,    &kp LC(LS(LA(LGUI))),  LM4 LM3 LM2 LM1, RM4 RM3 RM2 RM1,   T_FAST, I_FAST)
ZMK_COMBO_MIRRORED(lcsa,     &kp LC(LS(LALT)),      LM4 LM3 LM2,     RM4 RM3 RM2,       T_FAST, I_FAST)

ZMK_COMBO(ldrsh,             &leader_sft,           LM3 LM2 LM1,     NOT_MIRROR,        T_FAST, I_FAST, LS(LC(LGUI)), KEYS_R)

ZMK_COMBO_MIRRORED(tab,      &hml LS(LCTRL) TAB,    LM3 LM2,         RM3 RM2,           T_FAST, I_FAST)
