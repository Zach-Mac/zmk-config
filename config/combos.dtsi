ZMK_COMBO_MIRRORED(under,    &kp UNDER,             RT1 RM1,         LT1 LM1,           T_SLOW, I_SLOW)
ZMK_COMBO_MIRRORED(star,     &kp STAR,              RT2 RM2,         LT2 LM2,           T_SLOW, I_SLOW)
